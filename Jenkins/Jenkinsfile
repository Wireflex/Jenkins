properties([disableConcurrentBuilds()])

pipeline {
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    
    stages {
        stage("create docker image") {
            steps {
                    sh 'docker rmi wireflex/test'
                dir ('Jenkins') {
                    sh 'docker build -t wireflex/test . '
                }
            }
        }
        stage("docker login") {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub_wireflex', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh 'docker login -u $USERNAME -p $PASSWORD'
                    sh 'docker push wireflex/test'
                }
            }
        }
        stage("pizdec") {
            steps {
                    sh """ssh root@94.142.141.77 'cd ~ && rm docker-compose.yaml'
                    cd ~ && cat << 'EOF' > docker-compose.yml
services:
  test:
    image: wireflex/test
    ports:
      - '80:80'
    restart: unless-stopped
EOF"""
                    sh 'cd ~ && sudo cp docker-compose.yml docker-compose.yaml'
                    sh 'cd ~ && scp -i ~/.ssh/id_rsa docker-compose.yaml  root@94.142.141.77:/root'
              }
         }
        stage("Deploy on Remote Server") {
            steps {
                    sh "ssh root@94.142.141.77 'cd ~ && docker compose down'"
                    sh "ssh root@94.142.141.77 'cd ~ && docker rmi wireflex/test'"
                    sh "ssh root@94.142.141.77 'cd ~ && docker compose up -d'"
            }
        }
    }
} 
